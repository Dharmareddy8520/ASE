{
  "name": "learnova",
  "version": "1.0.0",
  "description": "Learnova - AI-powered learning platform",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:backend": "cd apps/backend && npm run build",
    "start": "cd apps/backend && npm start",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd apps/frontend && npm test",
    "test:backend": "cd apps/backend && npm test",
    "install:all": "npm install && cd apps/frontend && npm install && cd ../backend && npm install",
    "deploy:prepare": "chmod +x deploy.sh && ./deploy.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "apps/*"
  ]
}
